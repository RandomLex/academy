<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>CalculatorServlet</servlet-name>
    <servlet-class>com.barzykin.edu.academy.controllers.Calculator</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AverageSalary</servlet-name>
    <servlet-class>com.barzykin.edu.academy.controllers.AverageSalary</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Average</servlet-name>
    <jsp-file>/average-salary.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Average</servlet-name>
    <url-pattern>/average-salary.jsp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AverageSalary</servlet-name>
    <url-pattern>/average</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CalculatorServlet</servlet-name>
    <url-pattern>/calc/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.barzykin.edu.academy.filters.EncodingFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>


